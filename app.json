    "nl": "Zet een Sonoff apparaat aan en uit en hou de staat gesynchroniseerd."
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Jonathan Bochove",
    "email": "bochove@outlook.com"
