{
  "id": "nl.bochove.toggleSonoff",
  "version": "0.0.1",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Sonoff switching",
    "nl": "Sonoff aan en uit zetten"
  },
  "drivers": [{
    "id": "sonoffLan",
    "name": {
      "en": "Sonoff lan",
      "nl": "Sonoff lan"
    },
    "images": {
      "large": "drivers/sonoffLan/assets/images/large.png",
      "small": "drivers/sonoffLan/assets/images/small.png"
    },
    "class": "other",
    "capabilities": [ "onoff" ],
    "pair": [{
      "id": "start"
    }, {
      "id": "list_devices",
      "template": "list_devices"
